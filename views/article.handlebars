<div class="row">
    <br>
    <h4 class="card-panel  center-align" id="header">{{article.title}}</h4>
    <div class="col s1"></div>
    <h5 class="card-panel articleBody col s10">{{body}}</h5>
    <div class="col s1"></div>

</div>


<div class="row">
    <div class="col s3"></div>
    <form action="/comment/{{article._id}}" method="POST" class="card-panel col s6">
        <h5>Comment on this Article:</h5>
        <div class="row">
            <div class="input-field">
                <i class="material-icons prefix">perm_identity</i>
                <input id="icon_prefix" type="text" placeholder="Name" name="name" class="validate active">
            </div>
            <div class="input-field">
                <i class="material-icons prefix">comment</i>
                <input id="icon_telephone" type="text" placeholder="Comment" name="comment" class="validate active">
            </div>
        </div>
        <!-- Submit Button -->
        <div class="row">
            <div class="input-field">
                <center><input class="btn add-comment-button orange lighten-1" type="submit" value="Submit"></center>
            </div>
        </div>
    </form>
</div>

{{!-- comments go here --}}
<div class="row">
    <div class="col s2"></div>
    <div class="col s8">
        <h5>Comments:</h5>
        {{#if article.comment}}
            {{#each article.comment}}
                <div class="card">
                    <p id="nameComment">{{name}}</p>
                    <p>{{body}}<p>
                </div>
            {{/each}}
        {{else}}
            <p>No Comments Yet.</p>
        {{/if}}
    </div>
</div>