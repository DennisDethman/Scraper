<div>
    <br>
    <h2 class="card-panel z-depth-3 center-align" id="header">Read the Latest from 'The Verge' in Tech</h2>
    <div class="row">
        <div class="col s4"></div>
        <span class="card-panel z-depth-3 center-align col s4">Click <a href="/scrape">'Scrape'</a> to get the latest articles</span>
    </div>
</div>

<div class="row">
    <div class="col s2"></div>
    <div class ="col s8 left-align">
        {{#each article}}
            <div class="card-panel">
                <h5>{{this.title}}</h5>
                {{!-- goes to article.handlebars --}}
                <a href = "/readArticle/{{this._id}}" class="waves-effect waves-light btn blue lighten-1" id="btnSignUp">Read Article</a>
            </div>
        {{/each}}
    </div>
</div>